<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoTracker" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black_500</item>

        <item name="colorSecondary">@color/grey_500</item>
        <item name="colorSecondaryVariant">@color/grey_200</item>
        <item name="colorOnSecondary">@color/black_700</item>

        <item name="android:statusBarColor">@color/black_500</item>

        <item name="android:windowBackground">@color/black_500</item>
        <item name="android:colorBackground">@color/black_500</item>

        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="toolBarStyle" >
        <item name="android:textColor">@color/white_500</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="cardViewBackground" >
        <item name="android:backgroundTint">@color/black_500</item>
    </style>

    <style name="buttonBackground" >
        <item name="android:background">@drawable/nav_header_border</item>
        <item name="android:backgroundTint">@color/blue_200</item>
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="searchBar" >
        <item name="android:ems">10</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:hint">Search</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor</item>
        <item name="android:background">@drawable/search_input_border</item>
        <item name="android:textColor">@color/white_500</item>
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

</resources>